@model EasyProperty.WebApp.Models.ViewModel.UserLoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户登录</title>

    <link href="~/Content/login.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-2.1.3.min.js"></script>


</head>
<body>
    <div class="login-box">
        <p style="text-align: center"><img class="login-box-logo" src="/Images/logo.png" /></p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <p>@Html.LabelFor(model => model.UserName)</p>
            <p>@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "textbox login-field" } })</p>


            <p>@Html.LabelFor(model => model.Password)</p>
            <p>@Html.PasswordFor(model => model.Password, new { @class = "textbox login-field" })</p>

            <p>@Html.ValidationSummary(true, "", new { @style = "color:red" })</p>

            <p>
                <input type="submit" class="button button-def" value="登录" />
                @Html.EditorFor(model => model.RememberMe) @Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @class = "control-label col-md-2" })
            </p>
        }
    </div>
    <p class="es-copyright"> Copyright © 2015 Code Comb Inc. All rights reserved.</p>

    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
